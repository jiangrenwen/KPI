   <select id="getKpiDept"  resultMap="DeptMap">
		SELECT
			p.*, y.group_id,
			y.weight,
			y.content,
			y.year_target,
			y.standard,
			y.project_level,
			y.difficulty,
			y.responsible_person
		FROM
			kpi_group_year p
		LEFT JOIN kpi_dept_year y ON p.ID = y.group_id		
		WHERE
			p. STATUS = 1
		ORDER BY
			p.create_time DESC,key_item
		LIMIT #{0} ,#{1}
	</select>
	
