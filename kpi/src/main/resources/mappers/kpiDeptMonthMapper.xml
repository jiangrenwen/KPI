  <!-- 查询部门月度PBC -->
  <select id="getKpiDeptMonth"  resultMap="DeptMonthMap">		
	SELECT
		M.ID,
		G.KEY_TASK,
		G.KEY_ITEM,
		G.DETAIL_ITEM,
		D.KEY_POINT,
		M.WEIGHT,
		M.YEAR_TARGET,
		M.STANDARD,
		M.KPI_MONTH,
		M.KPI_YEAR,
		Y.RESPONSIBLE_PERSON,
		m.finish_value,
		m.finish_desc,
		m.seft_score,
		m.audit_status
	FROM
		KPI_DEPT_MONTH M
	LEFT JOIN KPI_DEPT_YEAR Y ON  M.KPI_ID = Y.ID 
	LEFT JOIN KPI_DEPT_YEAR_DETAIL D ON D.DEPT_KPI_ID = Y.ID
	LEFT JOIN KPI_GROUP_YEAR G ON Y.GROUP_ID = G.ID
	<where>	
			Y.audit_status = '3' AND M.STATUS = '1'	
			<if test="keyTask != null">
				and G.key_task like '%${keyTask}%'
			</if>			
			<if test="year != null" >
	        	and M.KPI_YEAR = #{year}
	        </if>
	        <if test="month != null" >
	        	and  M.KPI_MONTH = #{month}
	        </if>
	        <if test="deptId != null" >
	        	and G.dept = #{deptId}
	        </if>
	        
	</where>	
	ORDER BY G.KEY_TASK,G.KEY_ITEM,D.KEY_POINT,M.CREATE_TIME DESC
	LIMIT #{start} ,#{rows}
  </select>
  
  <!-- 查询部门月度评价 -->
  <select id="getKpiDeptMonthScore"  resultMap="DeptMonthMap">		
	SELECT
		M.ID,
		G.KEY_TASK,
		G.KEY_ITEM,
		G.DETAIL_ITEM,
		D.KEY_POINT,
		M.WEIGHT,
		M.YEAR_TARGET,
		M.STANDARD,
		M.KPI_MONTH,
		M.KPI_YEAR,
		Y.RESPONSIBLE_PERSON,
		m.finish_value,
		m.finish_desc,
		m.seft_score,
		m.exam_score,
		m.remark,
		g.dept,
		CASE
		WHEN m.audit_status = '3' THEN
			'1'
		WHEN m.audit_status = '5' THEN
			'2'
		WHEN m.audit_status = '6' THEN
			'3'
		else m.audit_status
		END AS audit_status		
	FROM
		KPI_DEPT_MONTH M
	LEFT JOIN KPI_DEPT_YEAR Y ON  M.KPI_ID = Y.ID 
	LEFT JOIN KPI_DEPT_YEAR_DETAIL D ON D.DEPT_KPI_ID = Y.ID
	LEFT JOIN KPI_GROUP_YEAR G ON Y.GROUP_ID = G.ID
	<where>	
			Y.audit_status = '3' 
			<!-- status 不为空，则表示员工月度评价提交 -->
			<if test="status != null">
				AND (M.audit_status = '3' or M.audit_status = '5' or M.audit_status = '6')
			</if>			
			<if test="keyTask != null">
				and G.key_task like '%${keyTask}%'
			</if>			
			<if test="year != null" >
	        	and M.KPI_YEAR = #{year}
	        </if>
	        <if test="month != null" >
	        	and  M.KPI_MONTH = #{month}
	        </if>
	        <if test="deptId != null" >
	        	and G.dept = #{deptId}
	        </if>
	        
	</where>	
	ORDER BY G.KEY_TASK,G.KEY_ITEM,D.KEY_POINT,M.CREATE_TIME DESC
	LIMIT #{start} ,#{rows}
  </select>
  

